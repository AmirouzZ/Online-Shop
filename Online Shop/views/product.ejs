<%- include('parts/header.ejs')%>
<body>
    <%- include('parts/navbar.ejs')%>
    <div class="container">
        <% if(!product) { %>
            <div class="class alert alert-danger">
                Product is not existed
            </div>
            <% }else{ %>
                <% if(isFirst) { %>
                    <br>
                    <div class="class alert alert-primary">
                    This is the first product
                    </div>
                    <% } %>
                    <br>
                <div class="row">
                    <div class="col col-12 col-md-6">
                        <img src="/<%= product.image%>">

                <% if(validationCardERR) { %>
                    <p class="alert alert-danger">
                        <%= validationCardERR.msg %>
                    </p>
                    <% } %>

                        <form action="/card" method="POST">
                            <input type="number" name="amount" class="form-control">
                            <input type="hidden" name="redirectTo" value="/product/<%= product._id%>">
                            <input type="hidden" name="name" value="<%=product.name%>">
                            <input type="hidden" name="price" value="<%=product.price%>">
                            <input type="hidden" name="productId" value="<%=product._id%>">
                            <input type="submit" value="Add To Card" class="btn btn-primary">
                        </form>
                    </div>
                    <div class="col col-12 col-md-6">
                        <h3><%= product.name%></h3>
                        <h5><%= product.price%></h5>
                        <p><%= product.description%></p>
                    </div>
                </div>
                <%}%>
         </div>
</body>
<%- include('parts/footer.ejs')%>